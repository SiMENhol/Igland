                <label for="input6">Telefon:</label>
                <input type="text" id="input6" class="input-field" placeholder="">

                <label for="input7">Produkttype:</label>
                <input type="text" id="input7" class="input-field" placeholder="">

                <label for="input8">Årsmodell:</label>
                <input type="text" id="input8" class="input-field" placeholder="">

                <label for="input9">Service / rep:</label>
                <input type="text" id="input9" class="input-field" placeholder="">

                <label for="input10">Garanti?:</label>
                <input type="text" id="input10" class="input-field" placeholder="">

                <label for="input11">Serienummer:</label>
                <input type="text" id="input11" class="input-field" placeholder="">

                <br />
                <br />

                    <label for="comment-field"> Hva er avtalt med kunden:</label>
