<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
@using Igland.MVC.Models.ArbDok;
@using Igland.MVC.CommonMethods;
@model ArbDokFullViewModel
@{
    ViewData["Title"] = "Arbeidsdokumenter";
    Date date = new Date();
}


<div class="overskrift">

    <h1>Arbeidsdokument </h1>
    <br />
    <div>
        <input type="text" class="button-link" id="searchInput" placeholder="Søk..">
    </div>
</div>

<!--
    <form action="@Url.Action("Ny", "ArbDok")">
    <button type="submit" class="button-link">Nytt arbeidsdokument</button>
    </form>
-->

<hr />
<table id="tabell" , align="center">

    @* <thred> spare </thred> *@
    <tr>
        <th>
            BOOKET SERVICE TIL UKE
        </th>

        <th>
            Henvendelse mottatt
        </th>

        <th>
            Status
        </th>

        <th>
            Produkttype
        </th>
        <th>
            Bestilling fra kunde
        </th>
        <th>
            Kunde
        </th>
        <th>
            Avtalt levering
        </th>
        <th>
            Produkt mottatt
        </th>
        <th>
            Avtalt ferdig innen
        </th>
        <th>
            Service ferdig
        </th>
        <th>
            Antall timer på utført service
        </th>
        <th>
            Ordrenummer
        </th>
        <th>
            Slett?
        </th>




        @* undergreier i tabellen *@

    <tbody>
        @foreach (var ArbeidsDokuments in Model.ArbDokList.OrderByDescending(x => x.OrdreNummer))
        {
            var Ordre = Model.OrdreList.Find(x => x.OrdreNummer == ArbeidsDokuments.OrdreNummer);
            var Kunde = Model.KunderList.Find(x => x.KundeID == Ordre.KundeID);

            <tr class="row-clickable row-data" data-url="@Url.Action("Rediger", "ArbDok", new { id = ArbeidsDokuments.ArbDokID })">
                <td>49</td>
                <td>@date.formatDateForViewing(ArbeidsDokuments.HenvendelseMotatt.ToString())</td>
                <td>@Ordre.Status</td>
                <td>@Ordre.VareNavn @Ordre.SerieNummer</td>
                <td>@ArbeidsDokuments.BestillingFraKunde</td>
                <td>@Kunde.KundeNavn</td>
                <td>@date.formatDateForViewing(ArbeidsDokuments.AvtaltLevering.ToString())</td>
                <td>@date.formatDateForViewing(ArbeidsDokuments.ProduktMotatt.ToString())</td>
                <td>@date.formatDateForViewing(ArbeidsDokuments.AvtaltFerdig.ToString())</td>
                <td>@date.formatDateForViewing(ArbeidsDokuments.ServiceFerdig.ToString())</td>
                <td>@ArbeidsDokuments.AntallTimer</td>
                <td>@Ordre.OrdreNummer</td>
                <td>
                    <form asp-action="Delete" asp-controller="ArbDok" method="post" onsubmit="return confirm('Er du sikker på at du vil slette?');">
                        <input type="hidden" name="ArbDokID" value="@ArbeidsDokuments.ArbDokID" /> <!-- type="hidden". Only used to track ID-->
                        <input type="submit" class="button-link" value="Slett" />
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>


<script>
    $(document).ready(function () {
        // Function to filter rows based on search input
        function filterTable() {
            var searchText = $('#searchInput').val().toLowerCase();
            $('.row-data').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(searchText) > -1);
            });
        }

        // Event listener for keyup on the search input
        $('#searchInput').keyup(function () {
            filterTable();
        });

        // Redirect to the details page when clicking on a row
        $(".row-clickable").click(function () {
            var url = $(this).data("url");
            window.location.href = url;
        });
        function confirmDelete() {
            var userConfirmed = confirm('Er du sikker på at du vil slette?');
            return userConfirmed;
        }
    });
</script>
